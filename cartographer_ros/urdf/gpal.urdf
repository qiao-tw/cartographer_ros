<?xml version="1.0"?>
<robot name="saic_van">

  <material name="yellow">
    <color rgba="1 1 0 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="ghost">
    <color rgba="1 1 1 0.3"/>
  </material>
  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="4 1.52 1.96"/>
      </geometry>
      <material name="ghost"/>
    </visual>
  </link>

  <link name="imu">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="yellow"/>
    </visual>
  </link>

  <link name="tracking_imu">
  </link>

  <joint name="car_to_imu_mount" type="fixed">
    <parent link="base_link"/>
    <child link="tracking_imu"/>
    <origin rpy="0 0 0" xyz="0.15 0 -1.9"/>
  </joint>

  <joint name="imu_mount_to_imu" type="fixed">
    <parent link="tracking_imu"/>
    <child link="imu"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <link name="velodyne">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="lidar_to_car" type="fixed">
    <parent link="velodyne"/>
    <child link="base_link"/>
    <origin rpy="0.018263958755763428 -0.012080098704599477 2.1499999999999999" xyz="0 0 0"/>
  </joint>

  <link name="gps">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="car_to_gps" type="fixed">
    <parent link="base_link"/>
    <child link="gps"/>
    <origin xyz="-0.12 0 -0.64"/>
  </joint>
</robot>
